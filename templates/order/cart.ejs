<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">
        <title>Product</title>
    </head>

    <body>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Cozybar</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/product/about">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/product">Product</a>
              </li>
              <% if (locals.user){ %>
                <% if (user.type == 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/product/admin">Admin</a>
                </li>
                <% } %>
              <% } %>
            </ul>
            <% if (locals.user) { %>
              <div class="mx-auto text-center">
                <p class="mb-0">Welcome <strong><%= user.username %></strong></p>
              </div>
            <% } %>
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <div>
                <% if (locals.user){ %>
                    <a class="btn btn-outline-primary float-left me-2" href="/order/cart">Cart</a>
                    <a class="btn btn-outline-primary float-left me-2" href="/authentication">Logout</a>
                <% }else{ %>
                    <a class="btn btn-outline-primary float-left me-2" href="/authentication">Login</a>
                <% } %>
            </div>
          </div>
        </div>
      </nav>
      <br><br>
        
      <div class="container">
        <h3 class="text-center">Your Order</h3>
        <br>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% var id=1; %>
              <% cartItems.forEach(product => { %>
                <tr>
                  <th scope="row"><%- id %></th>
                  <td><%- product.name %></td>
                  <td><%- product.price %></td>
                  <td><%- product.quantity %></td>
                  <td><a class="btn btn-danger" href="/order/cart/delete/<%- product.id %>">Remove</a></td>
                </tr>
              <% id++; }); %>
            </tbody>
        </table>
        <h5 class="float-end">Total Price: <%- totalPrice %></h5>
      </div>
    </body>
    <br><br>

    <footer class="container-fluid text-center footer fixed-bottom">
      <a> &copy; 2025 Cozybar</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>