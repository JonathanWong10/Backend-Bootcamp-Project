<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">
        <title>Product</title>
    </head>

    <body>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Cozybar</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/product/about">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/product">Product</a>
              </li>
              <% if (locals.user){ %>
                <% if (user.type == 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/product/admin">Admin</a>
                </li>
                <% } %>
              <% } %>
            </ul>
            <% if (locals.user) { %>
              <div class="mx-auto text-center">
                <p class="mb-0">Welcome <strong><%= user.username %></strong></p>
              </div>
            <% } %>
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <div>
              <% if (locals.user){ %>
                <a class="btn btn-outline-primary float-left me-2" href="/order/cart">Cart</a>
                <a class="btn btn-outline-primary float-left me-2" href="/authentication">Logout</a>
              <% }else{ %>
                <a class="btn btn-outline-primary float-left me-2" href="/authentication">Login</a>
              <% } %>
            </div>
          </div>
        </div>
      </nav>
        
      <div class="container">
        <br>
        <h1>Product</h1>
        <br><br>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% product.forEach(product =>{ %>
              <div class="col">
                  <div class="card h-100">
                      <img src="<%- product.imgUrl %>" class="card-img-top img-fluid" alt="...">
                      <div class="card-body d-flex flex-column">
                        <p class="card-text"><b><%- product.name %></b></p>
                        <p class="card-text">Price: Rs <%- product.price %></p>
                        <p class="card-text">Stock: <%- product.stock %></p>
                        <div class="mt-auto text-center">
                          <a type="button" class="btn btn-primary" href="/order/cart/add/<%- product.id %>">Add to Cart</a>
                        </div>
                      </div>
                  </div>
              </div>
            <% }); %>
        </div>
      </div>
    </body>
    <br><br>

    <footer class="container-fluid text-center footer fixed-bottom">
      <a> &copy; 2025 Cozybar</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>